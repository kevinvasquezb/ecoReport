{
  "name": "ecoreports-backend",
  "version": "2.0.0",
  "description": "Backend para EcoReports - Plataforma Inteligente de Monitoreo de Residuos Urbanos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "logs": "tail -f logs/app.log",
    "production": "NODE_ENV=production node server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "security-audit": "npm audit && npm audit fix",
    "deps-update": "npm update && npm audit",
    "backup-db": "node scripts/backup-db.js",
    "clean": "rm -rf node_modules && rm -f package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "joi": "^17.11.0",
    "sharp": "^0.32.6",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ecoreports",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "cloudinary",
    "waste-management",
    "environmental",
    "urban-monitoring",
    "smart-city",
    "sustainability",
    "gamification",
    "notifications"
  ],
  "author": {
    "name": "EcoReports Team",
    "email": "team@ecoreports.com",
    "url": "https://ecoreports.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecoreports/backend.git"
  },
  "bugs": {
    "url": "https://github.com/ecoreports/backend/issues"
  },
  "homepage": "https://ecoreports.com",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "node/no-unsupported-features/es-syntax": "off",
      "security/detect-object-injection": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/*",
      "tests/*",
      "coverage/*",
      "logs/*",
      "uploads/*"
    ],
    "delay": "1000",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "port": 5000,
    "db_pool_size": 20,
    "jwt_expiry": "7d",
    "bcrypt_rounds": 12,
    "upload_limit": "10mb",
    "rate_limit_window": "15m",
    "rate_limit_max": 100
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ecoreports"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}